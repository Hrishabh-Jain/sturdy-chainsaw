// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int a , b;
    cout<<"Enter the value of a"<<" "<<endl;
    cin>>a;
    
     cout<<"Enter the value of b"<<" "<<endl;
     cin>>b;
     
     char op;
     cout<<"Enter the function you want to perform"<<" "<<endl;
     cin>>op;
     
     switch(op) {
         
         case '+': cout<<(a+b)<<endl;
         break;
         case '-': cout<<(a-b)<<endl;
         break;
         case '*':cout<<(a*b)<<endl;
         break;
         case '/':cout<<(a/b)<<endl;
         break;
         case '%':cout<<(a%b)<<endl;
         break;
         
         default : cout<<"Please enter a valid operation"<<endl;
         
         
         
         
     }
    


    return 0;
}
